<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Pinball High Score - Players</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <%- include('navigator') -%>
    <hr>
    <div>
        <table class="table table-striped">
            <thead>
            <tr>
                <td><b>Name</b></td>
                <td><b>Username</b></td>
                <td><b>Password</b></td>
                <td><b>Birthdate</b></td>
                <td><b>IFPA ID</b></td>
                <td><b>Modify</b></td>
            </tr>
            </thead>
            <% players.forEach(function(player){ %>
                <tr>
                    <td>
                        <%= player.name %>
                    </td>
                    <td>
                        <%= player.username %>
                    </td>
                    <td>
                        <%= player.password %>
                    </td>
                    <td>
                        <%= player.adjbirthdate %>
                    </td>
                    <td>
                        #<%= player.ifpa_id %>
                    </td>
                    <td>
                        <span>
                            <button type="button" class="btn btn-outline-warning"><a href="player/edit/<%= player._id %>" class="text-decoration-none">Edit</a></button>
                        </span>
                        <span>
                            <button type="button" class="btn btn-outline-danger"><a href="player/delete/<%= player._id %>" class="text-decoration-none">Delete</a></button>
                        </span>
                    </td>
                </tr>
            <% }); %>
        </table>
    </div>
</body>
</html>