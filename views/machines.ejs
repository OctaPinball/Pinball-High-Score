<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Pinball High Score - Machines</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <%- include('navigator') -%>
       <hr>
    <div>
        <a type="button" class="btn btn-outline-primary" href="/machines/new">Add Machine</a>
    </div>
    <div>
        <table class="table table-striped">
            <thead>
            <tr>
                <td><b>Name</b></td>
                <td><b>Manufacturer</b></td>
                <td><b>Prod. year</b></td>
                <td><b>Modify</b></td>
            </tr>
            </thead>

            <% machines.forEach(function(machine){ %>
                <tr>
                    <td>
                        <%= machine.name %>
                    </td>
                    <td>
                        <%= machine.manufacturer %>
                    </td>
                    <td>
                        <%= machine.year %>
                    </td>
                    <td>
                        <span>
                            <a type="button" class="btn btn-outline-info" href="/competition/<%= machine._id %>">Scores</a>
                        </span>
                        <span>
                            <a type="button" class="btn btn-outline-warning" href="machines/edit/<%= machine._id %>">Edit</a>
                        </span>
                        <span>
                            <a  type="button" class="btn btn-outline-danger" href="machines/delete/<%= machine._id %>">Delete</a>
                        </span>
                    </td>
                </tr>
            <% }); %>
        </table>
    </div>
</body>
</html>