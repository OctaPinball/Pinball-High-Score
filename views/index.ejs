<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Pinball High Score - Log In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <b class="navbar-brand">Pinball High Score</b>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" aria-current="page"  href="/competition">Competition</a></li>
                    <li class="nav-item"><a class="nav-link" aria-current="page"  href="/">Log in</a></li>
                </ul>
            </div>
        </div>
   </nav>
   <% if (typeof error !== 'undefined') { %>
    <div class="alert alert-danger"><%= error %></div>
    <% } %>
   <hr>
   <div>
    <form method="POST">
        <div class="form-group">
            <div class="input-group flex-nowrap">
                <input id="login_username" type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="addon-wrapping" name="login_username" required>
            </div>
            <div class="input-group flex-nowrap">
                <input id="login_password" type="password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="addon-wrapping" name="login_password" required>
            </div>
            <br>
            <input type="submit" class="btn btn-outline-primary" value="Sign In" />
        </div>
    </form>
    <hr>
    <br>
    <br>
    <form method="post" action="/">
        <div class="input-group flex-nowrap">
            <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="addon-wrapping" id="reg_username" name="reg_username" required>
        </div>
        <div class="input-group flex-nowrap">
            <input type="password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="addon-wrapping" id="reg_password" name="reg_password" required>
        </div>
        <div class="input-group flex-nowrap">
            <input type="text" class="form-control" placeholder="Name" aria-label="Name" aria-describedby="addon-wrapping" id="reg_name" name="reg_name" required>
        </div>
        <div class="input-group flex-nowrap">
            <span class="input-group-text" id="inputGroup-sizing-default">Birthdate</span>
            <input type="date" class="form-control" placeholder="Birthdate" aria-label="Birthdate" aria-describedby="addon-wrapping" id="reg_birthdate" name="reg_birthdate" required>
        </div>
        <div class="input-group flex-nowrap">
            <span class="input-group-text" id="addon-wrapping">#</span>
            <input type="number" class="form-control" placeholder="IFPA ID" aria-label="IFPA ID" aria-describedby="addon-wrapping" id="reg_ifpaid" name="reg_ifpaid" required>
        </div>
        <br>
        <div>
            <button class="btn btn-outline-primary">Sign Up</button>
        </div>
    </form>
   </div>
</body>
</html>