<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Pinball High Score - Machines</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <%- include('navigator') -%>
       <hr>
    <div>
        <button type="button" class="btn btn-outline-primary"><a href="/machines/new" class="text-decoration-none">Add Machine</a></button>
    </div>
    <div>
        <table class="table table-striped">
            <thead>
            <tr>
                <td><b>Name</b></td>
                <td><b>Manufacturer</b></td>
                <td><b>Prod. year</b></td>
                <td><b>Modify</b></td>
            </tr>
            </thead>

            <% machines.forEach(function(machine){ %>
                <tr>
                    <td>
                        <%= machine.name %>
                    </td>
                    <td>
                        <%= machine.manufacturer %>
                    </td>
                    <td>
                        <%= machine.year %>
                    </td>
                    <td>
                        <span>
                            <button type="button" class="btn btn-outline-info"><a href="/competition/<%= machine._id %>" class="text-decoration-none">Scores</a></button>
                        </span>
                        <span>
                            <button type="button" class="btn btn-outline-warning"><a href="machines/edit/<%= machine._id %>" class="text-decoration-none">Edit</a></button>
                        </span>
                        <span>
                            <button type="button" class="btn btn-outline-danger"><a href="machines/delete/<%= machine._id %>" class="text-decoration-none">Delete</a></button>
                        </span>
                    </td>
                </tr>
            <% }); %>
        </table>
    </div>
</body>
</html>